    for (n = 0; a[n] != '\0'; n++);
    
    i = 0;
    j = n - 1;

    while (b[i] != '\0') {
        a[j] = b[i];
        i++;
        j++;
    }

    a[j] = '\0';

    printf("Concatenated String: %s\n", a);

    return 0;
